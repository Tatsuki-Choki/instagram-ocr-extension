{
  "manifest_version": 3,
  "name": "Instagram OCR - 画像文字起こし",
  "version": "1.2.0",
  "description": "Instagramフィード投稿の画像からテキストを抽出します。Gemini APIを使用した高精度OCR。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon48.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
